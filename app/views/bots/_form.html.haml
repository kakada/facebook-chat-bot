= form_tag bots_path, class: 'form-group' do
  - if @bot.errors.present?
    .alert.alert-danger= @bot.errors.full_messages

  .form-group
    = label_tag :name
    = text_field_tag :name, @bot.name, required: true, class: 'form-control'

  .form-group
    = label_tag :facebook_page_id
    = text_field_tag :facebook_page_id, @bot.facebook_page_id, required: true, class: 'form-control'

  .form-group
    = label_tag :facebook_page_access_token
    = text_field_tag :facebook_page_access_token, @bot.facebook_page_access_token, required: true, class: 'form-control'

  = submit_tag "Create", class: 'btn btn-default btn-primary'
  = link_to "Cancel", bots_path, class: 'btn btn-default'
