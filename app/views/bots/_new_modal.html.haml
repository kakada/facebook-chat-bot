#create-new.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4#myModalLabel.modal-title New Bot
      = form_for current_user.bots.new do |f|
        .modal-body
          .form-group
            .control
              = f.label :name
              = f.text_field :name, class: 'form-control input-md', required: true, autofocus: true, placeholder: "Your bot name"
            .control
              = f.label 'Greeting message'
              = f.text_field :greeting_msg, class: 'form-control input-md', autofocus: true, placeholder: 'Greeting message to welcome visitor when they visit page messenger, e.g: Thank for your valuable time with our Facebook Page.'
            .control
              = f.label 'Finish message (160 character maximum)'
              = f.text_field :completing_msg, class: 'form-control input-md', autofocus: true, placeholder: 'Finish message to inform page visitor'
            .control
              = f.label 'Restart message (160 character maximum)'
              = f.text_field :restart_msg, class: 'form-control input-md', autofocus: true, placeholder: 'Restart message to let page visitor restart the conversation, e.g: Do you want to restart again?'
            .control{style: 'margin: 6px 0'}
              = f.label :language
              = f.select :language, [["Khmer", 'kh'], ["English", 'en']], class: 'form-control input-md'
        .modal-footer
          .form-group
            %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel
            = f.submit 'Save', class: 'btn btn-primary'
