= render 'shared/header'
= render 'shared/alert'

.container.space-top
  %center
    #div{style: 'width:80%', align: 'right'}
      %button.btn.btn-default.btn-primary{'data-target' => '#user-modal', 'data-toggle' => 'modal', type: 'button'} Create new
  %br

  %table.table-bordered.table.central{style: 'width:80%', align: 'center'}
    %thead
      %tr
        %th{width: 60} #
        %th Email
        %th Role
        %th Actions
    %tbody
      - @users.each_with_index do |user, index|
        %tr
          %td= index + 1
          %td= user.email
          %td= user.role
          %td
            %a.btn.btn-info.btn-xs{ 'data-target' => '#user-modal', 'data-toggle' => 'modal', type: 'button', 'data-user' => user.to_json}
              Edit

            - if user.id != current_user.id
              %a.btn.btn-danger.btn-xs{:rel => 'nofollow', :href => user_path(user.id), "data-method" => 'delete',  data: { confirm: 'Are you sure you want to delete the user?' }}
                Delete

= render 'form_modal'
