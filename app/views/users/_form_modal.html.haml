#user-modal.modal.fade{ 'aria-labelledby' => 'myModalLabel', :role => 'dialog', :tabindex => '-1' }
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %button.close{ 'aria-label' => 'Close', 'data-dismiss' => 'modal', type: 'button' }
          %span{ 'aria-hidden' => 'true' } Ã—
        %h4#myModalLabel.modal-title User

      = form_for User.new, html: { class: 'sform-horizontal' } do |f|
        .modal-body
          .form-group
            = f.label :email
            = f.email_field :email, class: 'form-control input-md', autofocus: true, required: true

          .form-group
            = f.label :role
            = f.select(:role, User::ROLES, {}, { class: 'form-control input-md' })

        .modal-footer
          .form-group
            %button.btn.btn-default{ 'data-dismiss' => 'modal', type: 'button'} Cancel
            = f.submit 'Save', class: 'btn btn-primary'
