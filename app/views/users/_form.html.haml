= form_for @user, html: { class: 'form-horizontal' } do |f|
  .form-group
    = f.label :email, class: 'col-md-4 control-label'
    .col-md-4
      = f.email_field :email, class: 'form-control input-md', autofocus: true

  .form-group
    = f.label :password_confirmation, class: 'col-md-4 control-label'
    .col-md-4
      = f.select(:role, User::ROLES, {}, { class: 'form-control input-md' })

  .form-group
    .col-md-4.col-md-offset-4
      = f.submit 'Save', class: 'btn btn-primary'
      %a.btn.btn-default{:href => "/users"} Cancel
